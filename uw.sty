\makeatletter
\newdimen\@uwdim
\def\uw#1{
\ifmmode\settowidth{\@uwdim}{$\displaystyle #1$}\else\settowidth{\@uwdim}{$#1$}\fi
\ifdim\@uwdim<1em
  \setlength{\@uwdim}{1em}
  \iff@
    \ifmmode\uwave{\hbox to\@uwdim{\hfil $\displaystyle #1$\hfil}}_\text{\f{}}
    \else$\uwave{\hbox to\@uwdim{\hfil #1\hfil}}_\text{\f{}}$
    \fi
  \else
    \ifmmode\uwave{\hbox to\@uwdim{\hfil $\displaystyle #1$\hfil}}
    \else\uwave{\hbox to\@uwdim{\hfil #1\hfil}}
    \fi
  \fi
\else
  \iff@
    \ifmmode\uwave{\displaystyle #1}_\text{\f{}}
    \else\uwave{#1}$_\text{\f{}}$
    \fi
  \else
    \ifmmode\uwave{\displaystyle #1}
    \else\uwave{#1}
    \fi
  \fi
\fi
\iff@
  \ifmmode
  \protected@write\@auxout{}%
  {\string\newlabel{ans\arabic{section}.\theFcntr}{{$#1$}{\thepage}}}%
  \else
  \protected@write\@auxout{}%
  {\string\newlabel{ans\arabic{section}.\theFcntr}{{#1}{\thepage}}}%
  \fi
\fi
}
\makeatother

