%%%%%%%%%%%uwの定義奴%%%%%%%%%%%

\makeatletter
\newif\iff@
\DeclareOption{f}{\f@true}
\ProcessOptions\relax
\makeatother

\makeatletter
\newdimen\@uwdim
\def\uw#1{
\settowidth{\@uwdim}{#1}
\ifdim\@uwdim<1em\@uwdim=1em\fi
\iff@ %下に出す
  \ifmmode\uwave{\hbox to\@uwdim{\hfill $#1$\hfill}}_\text{\f{}}
  \else$\uwave{\hbox to\@uwdim{\hfill \text{#1}\hfill}}_\text{\f{}}$
  \fi
\else %そのまま
  \uwave{\hbox to\@uwdim{\hfill #1\hfill}}
\fi
}
\makeatother
