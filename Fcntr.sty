\newtoks\fstyle
\newcounter{Fcntr}
\setcounter{Fcntr}{0}
\newcounter{fref}
\newcounter{ffref}


% セクション，つまり大問でカウンタをリセットするように指定．
\makeatletter
\@addtoreset{Fcntr}{section}
\makeatother

\makeatletter
\def\f#1{
\if#1　
  \,\framebox[1.2cm]{#1}\,
  \else
  \if#1""
    \addtocounter{Fcntr}{1}
    \,\framebox[1.2cm]{\csname\the\fstyle\endcsname{Fcntr}}\,
    \else
    \setcounter{fref}{#1}
    \,\framebox[1.2cm]{\csname\the\fstyle\endcsname{fref}}\,
    \fi
    \fi
}
\makeatother

\def\ff#1{
  \if#1　
    \,\doublebox{\hspace{.7zw}　\hspace{.7zw}}\,
    \else
    \setcounter{ffref}{#1}
    \,\doublebox{\hspace{.7zw}\csname\the\fstyle\endcsname{ffref}\hspace{.7zw}}\,
    \fi
  % \the\fstyle{ffref}
}
